<launch>
    <!-- Start robot localization node -->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization" output="screen">

        <!-- List of input topics -->
        <param name="odom_frame" value="odom"/>
        <param name="base_link_frame" value="base_link"/>
        <param name="world_frame" value="odom"/>

        <!-- Lidar odometry source -->
        <param name="odom0" value="/scan"/>

        <!-- Parameters for filter -->
        <param name="frequency" value="30.0"/>
        <param name="sensor_timeout" value="0.1"/>

        <!-- Covariance parameters (15-element vector) -->
        <rosparam param="odom0_config">[true, true, false,
                                false, false, true,
                                true, false, false,
                                false, false, true,
                                false, false, false]</rosparam>

        <!-- Additional parameters -->
        <param name="two_d_mode" value="true"/>
        <param name="map_frame" value="map"/>
        <param name="odom0_differential" value="false"/>
        <param name="odom0_relative" value="false"/>
        <param name="print_diagnostics" value="true"/>
        <param name="debug" value="false"/>
        <param name="publish_tf" value="true"/>
        <param name="publish_acceleration" value="false"/>

        <!-- Add this parameter to set the update rate (adjust as needed) -->
        <param name="odom0_desired_update_rate" value="30.0"/>

    </node>
</launch>
